/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.avatar_cover{
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
  background-color: rgb(105, 105, 105);
}

.userinfo-nickname {
  color: rgb(117, 117, 117);
  font-size: 15rpx;
}

.usermotto {
  margin-top: 200px;
}

.layout_horizontal{
  height: 160rpx;
  width: 100%;
  display: flex;
  align-items: center;

  box-sizing: border-box;
  flex-direction: row;
  margin: 10rpx;
}

._room {
  width: 165rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 10rpx;
  border: 1px solid  #aaa;
  background-color: #aaa;
  margin: 40rpx 0 0 23rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
}

.wsui-btn__hover_list {
  opacity: 0.3;
  background: #e1ff9c;
}

  